@model WebApp.Models.Maquina

@{
    ViewData["Title"] = "Detalles de Máquina";
}

<div class="container-fluid">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Maquinas">Máquinas</a></li>
            <li class="breadcrumb-item active">@Model.Nombre</li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-gear me-2"></i>Información de la Máquina</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-muted mb-3">Datos Generales</h6>
                            <dl class="row">
                                <dt class="col-sm-5">Código:</dt>
                                <dd class="col-sm-7"><code>@Model.Codigo</code></dd>

                                <dt class="col-sm-5">Nombre:</dt>
                                <dd class="col-sm-7"><strong>@Model.Nombre</strong></dd>

                                <dt class="col-sm-5">Descripción:</dt>
                                <dd class="col-sm-7">@(Model.Descripcion ?? "-")</dd>

                                <dt class="col-sm-5">Estado:</dt>
                                <dd class="col-sm-7">
                                    @if (Model.Activo)
                                    {
                                        <span class="badge bg-success">Activo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactivo</span>
                                    }
                                </dd>

                                <dt class="col-sm-5">Creación:</dt>
                                <dd class="col-sm-7">@Model.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted mb-3">Especificaciones</h6>
                            <dl class="row">
                                <dt class="col-sm-5">Fabricante:</dt>
                                <dd class="col-sm-7">@(Model.Fabricante ?? "-")</dd>

                                <dt class="col-sm-5">Modelo:</dt>
                                <dd class="col-sm-7">@(Model.Modelo ?? "-")</dd>

                                <dt class="col-sm-5">No. Serie:</dt>
                                <dd class="col-sm-7"><code>@(Model.NumeroSerie ?? "-")</code></dd>
                            </dl>

                            <hr />

                            <h6 class="text-muted mb-3">Ubicación</h6>
                            <dl class="row mb-0">
                                <dt class="col-sm-5">Estación:</dt>
                                <dd class="col-sm-7">
                                    <a asp-action="EstacionDetails" asp-route-id="@Model.EstacionId">@Model.Estacion.Nombre</a>
                                </dd>

                                <dt class="col-sm-5">Línea:</dt>
                                <dd class="col-sm-7">
                                    <a asp-action="LineaDetails" asp-route-id="@Model.Estacion.LineaId">@Model.Estacion.Linea.Nombre</a>
                                </dd>

                                <dt class="col-sm-5">Área:</dt>
                                <dd class="col-sm-7">
                                    <a asp-action="AreaDetails" asp-route-id="@Model.Estacion.Linea.AreaId">@Model.Estacion.Linea.Area.Nombre</a>
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <a asp-action="EditMaquina" asp-route-id="@Model.Id" class="btn btn-primary btn-sm">
                        <i class="bi bi-pencil me-1"></i>Editar
                    </a>
                    <a asp-action="DeleteMaquina" asp-route-id="@Model.Id" class="btn btn-outline-danger btn-sm">
                        <i class="bi bi-trash me-1"></i>Eliminar
                    </a>
                    <a asp-action="Maquinas" class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-arrow-left me-1"></i>Volver
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
