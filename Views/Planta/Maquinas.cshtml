@model IEnumerable<WebApp.Models.Maquina>

@{
    ViewData["Title"] = "Gestión de Máquinas";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">
            <i class="bi bi-gear me-2"></i>Máquinas
        </h1>
        <a asp-action="CreateMaquina" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i>Nueva Máquina
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox display-1 text-muted"></i>
                    <p class="text-muted mt-3">No hay máquinas registradas.</p>
                    <a asp-action="CreateMaquina" class="btn btn-primary">
                        <i class="bi bi-plus-circle me-1"></i>Crear primera máquina
                    </a>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Código</th>
                                <th>Nombre</th>
                                <th>Modelo</th>
                                <th>Estación</th>
                                <th>Línea / Área</th>
                                <th class="text-center">Estado</th>
                                <th class="text-end">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><code>@item.Codigo</code></td>
                                    <td><strong>@item.Nombre</strong></td>
                                    <td>@(item.Modelo ?? "-")</td>
                                    <td>
                                        <a asp-action="EstacionDetails" asp-route-id="@item.EstacionId">
                                            @item.Estacion.Nombre
                                        </a>
                                    </td>
                                    <td>
                                        <small class="text-muted">
                                            @item.Estacion.Linea.Nombre / @item.Estacion.Linea.Area.Nombre
                                        </small>
                                    </td>
                                    <td class="text-center">
                                        @if (item.Activo)
                                        {
                                            <span class="badge bg-success">Activo</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactivo</span>
                                        }
                                    </td>
                                    <td class="text-end">


                                        <div class="btn-group" role="group">
                                        <a asp-action="MaquinaDetails" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                            <i class="bi bi-eye"></i> Ver
                                        </a>
                                        <a asp-action="EditMaquina" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                            <i class="bi bi-pencil"></i> Editar
                                        </a>
                                        <a asp-action="DeleteMaquina" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash"></i> Eliminar
                                        </a>
                                    </div>


                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
