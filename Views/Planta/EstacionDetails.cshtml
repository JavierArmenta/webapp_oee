@model WebApp.Models.Estacion

@{
    ViewData["Title"] = "Detalles de Estación";
}

<div class="container-fluid">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Estaciones">Estaciones</a></li>
            <li class="breadcrumb-item active">@Model.Nombre</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-lg-4">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-hdd-stack me-2"></i>Información de la Estación</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Código:</dt>
                        <dd class="col-sm-8"><code>@Model.Codigo</code></dd>

                        <dt class="col-sm-4">Nombre:</dt>
                        <dd class="col-sm-8"><strong>@Model.Nombre</strong></dd>

                        <dt class="col-sm-4">Línea:</dt>
                        <dd class="col-sm-8">
                            <a asp-action="LineaDetails" asp-route-id="@Model.LineaId">@Model.Linea.Nombre</a>
                        </dd>

                        <dt class="col-sm-4">Área:</dt>
                        <dd class="col-sm-8">
                            <a asp-action="AreaDetails" asp-route-id="@Model.Linea.AreaId">@Model.Linea.Area.Nombre</a>
                        </dd>

                        <dt class="col-sm-4">Descripción:</dt>
                        <dd class="col-sm-8">@(Model.Descripcion ?? "-")</dd>

                        <dt class="col-sm-4">Estado:</dt>
                        <dd class="col-sm-8">
                            @if (Model.Activo)
                            {
                                <span class="badge bg-success">Activo</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactivo</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Creación:</dt>
                        <dd class="col-sm-8">@Model.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</dd>
                    </dl>
                </div>
                <div class="card-footer">
                    <a asp-action="EditEstacion" asp-route-id="@Model.Id" class="btn btn-primary btn-sm">
                        <i class="bi bi-pencil me-1"></i>Editar
                    </a>
                    <a asp-action="Estaciones" class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-arrow-left me-1"></i>Volver
                    </a>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-gear me-2"></i>Máquinas en esta Estación</h5>
                    <a asp-action="CreateMaquina" class="btn btn-sm btn-outline-primary">
                        <i class="bi bi-plus-circle me-1"></i>Nueva Máquina
                    </a>
                </div>
                <div class="card-body">
                    @if (!Model.Maquinas.Any())
                    {
                        <p class="text-muted text-center mb-0">No hay máquinas registradas en esta estación.</p>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-sm table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>Código</th>
                                        <th>Nombre</th>
                                        <th>Modelo</th>
                                        <th class="text-center">Estado</th>
                                        <th class="text-end">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var maquina in Model.Maquinas.OrderBy(m => m.Nombre))
                                    {
                                        <tr>
                                            <td><code>@maquina.Codigo</code></td>
                                            <td>@maquina.Nombre</td>
                                            <td>@(maquina.Modelo ?? "-")</td>
                                            <td class="text-center">
                                                @if (maquina.Activo)
                                                {
                                                    <span class="badge bg-success">Activo</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Inactivo</span>
                                                }
                                            </td>
                                            <td class="text-end">
                                                <a asp-action="MaquinaDetails" asp-route-id="@maquina.Id" class="btn btn-sm btn-outline-info">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
