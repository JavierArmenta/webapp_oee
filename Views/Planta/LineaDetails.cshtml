@model WebApp.Models.Linea

@{
    ViewData["Title"] = "Detalles de Línea";
}

<div class="container-fluid">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Lineas">Líneas</a></li>
            <li class="breadcrumb-item active">@Model.Nombre</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-lg-4">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-diagram-3 me-2"></i>Información de la Línea</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Código:</dt>
                        <dd class="col-sm-8"><code>@Model.Codigo</code></dd>

                        <dt class="col-sm-4">Nombre:</dt>
                        <dd class="col-sm-8"><strong>@Model.Nombre</strong></dd>

                        <dt class="col-sm-4">Área:</dt>
                        <dd class="col-sm-8">
                            <a asp-action="AreaDetails" asp-route-id="@Model.AreaId">@Model.Area.Nombre</a>
                        </dd>

                        <dt class="col-sm-4">Descripción:</dt>
                        <dd class="col-sm-8">@(Model.Descripcion ?? "-")</dd>

                        <dt class="col-sm-4">Estado:</dt>
                        <dd class="col-sm-8">
                            @if (Model.Activo)
                            {
                                <span class="badge bg-success">Activo</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactivo</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Creación:</dt>
                        <dd class="col-sm-8">@Model.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</dd>
                    </dl>
                </div>
                <div class="card-footer">
                    <a asp-action="EditLinea" asp-route-id="@Model.Id" class="btn btn-primary btn-sm">
                        <i class="bi bi-pencil me-1"></i>Editar
                    </a>
                    <a asp-action="Lineas" class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-arrow-left me-1"></i>Volver
                    </a>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-hdd-stack me-2"></i>Estaciones en esta Línea</h5>
                    <a asp-action="CreateEstacion" class="btn btn-sm btn-outline-primary">
                        <i class="bi bi-plus-circle me-1"></i>Nueva Estación
                    </a>
                </div>
                <div class="card-body">
                    @if (!Model.Estaciones.Any())
                    {
                        <p class="text-muted text-center mb-0">No hay estaciones registradas en esta línea.</p>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-sm table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>Código</th>
                                        <th>Nombre</th>
                                        <th class="text-center">Máquinas</th>
                                        <th class="text-center">Estado</th>
                                        <th class="text-end">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var estacion in Model.Estaciones.OrderBy(e => e.Nombre))
                                    {
                                        <tr>
                                            <td><code>@estacion.Codigo</code></td>
                                            <td>@estacion.Nombre</td>
                                            <td class="text-center">
                                                <span class="badge bg-info">@estacion.Maquinas.Count</span>
                                            </td>
                                            <td class="text-center">
                                                @if (estacion.Activo)
                                                {
                                                    <span class="badge bg-success">Activo</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Inactivo</span>
                                                }
                                            </td>
                                            <td class="text-end">
                                                <a asp-action="EstacionDetails" asp-route-id="@estacion.Id" class="btn btn-sm btn-outline-info">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
