@model WebApp.Models.Maquina

@{
    ViewData["Title"] = "Eliminar Máquina";
}

<div class="container-fluid">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Maquinas">Máquinas</a></li>
            <li class="breadcrumb-item active">Eliminar: @Model.Nombre</li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0"><i class="bi bi-exclamation-triangle me-2"></i>Confirmar Eliminación</h5>
                </div>
                <div class="card-body">
                    <p class="lead">¿Está seguro de eliminar esta máquina?</p>
                    
                    <dl class="row">
                        <dt class="col-sm-4">Código:</dt>
                        <dd class="col-sm-8"><code>@Model.Codigo</code></dd>

                        <dt class="col-sm-4">Nombre:</dt>
                        <dd class="col-sm-8"><strong>@Model.Nombre</strong></dd>

                        <dt class="col-sm-4">Fabricante:</dt>
                        <dd class="col-sm-8">@(Model.Fabricante ?? "-")</dd>

                        <dt class="col-sm-4">Modelo:</dt>
                        <dd class="col-sm-8">@(Model.Modelo ?? "-")</dd>

                        <dt class="col-sm-4">No. Serie:</dt>
                        <dd class="col-sm-8"><code>@(Model.NumeroSerie ?? "-")</code></dd>

                        <dt class="col-sm-4">Ubicación:</dt>
                        <dd class="col-sm-8">
                            @Model.Estacion.Nombre / @Model.Estacion.Linea.Nombre / @Model.Estacion.Linea.Area.Nombre
                        </dd>
                    </dl>

                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        <strong>Advertencia:</strong> Esta acción no se puede deshacer.
                    </div>
                </div>
                <div class="card-footer d-flex gap-2">
                    <form asp-action="DeleteMaquina" method="post">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash me-1"></i>Eliminar
                        </button>
                    </form>
                    <a asp-action="Maquinas" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle me-1"></i>Cancelar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
