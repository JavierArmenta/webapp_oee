@model WebApp.Models.Linealytics.Producto

@{
    ViewData["Title"] = "Crear Producto";
}

<div class="container-fluid">
    <div class="card shadow-sm mt-3">
        <div class="card-header">
            <h4 class="mb-0">
                <i class="bi bi-plus-circle me-2"></i>Crear Nuevo Producto
            </h4>
        </div>
        <div class="card-body">
            <form asp-action="CreateProducto" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Codigo" class="form-label">C칩digo del Producto</label>
                        <input asp-for="Codigo" class="form-control" placeholder="Ej: PROD-001" />
                        <span asp-validation-for="Codigo" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Nombre" class="form-label">Nombre del Producto</label>
                        <input asp-for="Nombre" class="form-control" placeholder="Ej: Widget Modelo A" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12 mb-3">
                        <label asp-for="Descripcion" class="form-label">Descripci칩n (opcional)</label>
                        <textarea asp-for="Descripcion" class="form-control" rows="3" placeholder="Descripci칩n del producto..."></textarea>
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="TiempoCicloSegundos" class="form-label">Tiempo de Ciclo (segundos)</label>
                        <input asp-for="TiempoCicloSegundos" class="form-control" type="number" min="1" placeholder="60" />
                        <small class="form-text text-muted">Tiempo est치ndar para producir una unidad o lote</small>
                        <span asp-validation-for="TiempoCicloSegundos" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="UnidadesPorCiclo" class="form-label">Unidades por Ciclo</label>
                        <input asp-for="UnidadesPorCiclo" class="form-control" type="number" min="1" value="1" placeholder="1" />
                        <small class="form-text text-muted">Cantidad de unidades producidas por ciclo</small>
                        <span asp-validation-for="UnidadesPorCiclo" class="text-danger"></span>
                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save me-1"></i>Guardar
                    </button>
                    <a asp-action="Productos" class="btn btn-secondary">
                        <i class="bi bi-x-circle me-1"></i>Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
