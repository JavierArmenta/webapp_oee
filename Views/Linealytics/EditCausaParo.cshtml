@model WebApp.Models.Linealytics.CausaParo

@{
    ViewData["Title"] = "Editar Causa de Paro";
}

<div class="container-fluid">
    <div class="card shadow-sm mt-3">
        <div class="card-header">
            <h4 class="mb-0">
                <i class="bi bi-pencil me-2"></i>Editar Causa de Paro
            </h4>
        </div>
        <div class="card-body">
            <form asp-action="EditCausaParo" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="CategoriaParoId" class="form-label">Categoría de Paro</label>
                        <select asp-for="CategoriaParoId" class="form-select" asp-items="ViewBag.Categorias">
                            <option value="">-- Seleccione una categoría --</option>
                        </select>
                        <span asp-validation-for="CategoriaParoId" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Nombre" class="form-label">Nombre de la Causa</label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="CodigoInterno" class="form-label">Código Interno (opcional)</label>
                        <input asp-for="CodigoInterno" class="form-control" />
                        <span asp-validation-for="CodigoInterno" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <div class="form-check mt-4">
                            <input asp-for="RequiereMantenimiento" class="form-check-input" type="checkbox" />
                            <label asp-for="RequiereMantenimiento" class="form-check-label">
                                Requiere Mantenimiento
                            </label>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12 mb-3">
                        <label asp-for="Descripcion" class="form-label">Descripción (opcional)</label>
                        <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="form-check">
                            <input asp-for="Activo" class="form-check-input" type="checkbox" />
                            <label asp-for="Activo" class="form-check-label">
                                Activo
                            </label>
                        </div>
                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save me-1"></i>Guardar Cambios
                    </button>
                    <a asp-action="CausasParo" class="btn btn-secondary">
                        <i class="bi bi-x-circle me-1"></i>Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
