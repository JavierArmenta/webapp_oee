@model IEnumerable<WebApp.Models.Linealytics.CategoriaParo>

@{
    ViewData["Title"] = "Gestión de Categorías de Paro";
}

<div class="container-fluid">

    <div class="card shadow-sm mt-3">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h3 mb-0">
                    <i class="bi bi-exclamation-triangle me-2"></i>Categorías de Paro
                </h1>
                <a asp-action="CreateCategoriaParo" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-1"></i>Nueva Categoría
                </a>
            </div>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox display-1 text-muted"></i>
                    <p class="text-muted mt-3">No hay categorías de paro registradas.</p>
                    <a asp-action="CreateCategoriaParo" class="btn btn-primary">
                        <i class="bi bi-plus-circle me-1"></i>Crear primera categoría
                    </a>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle datatable-basic">
                        <thead class="table-light">
                        <tr>
                            <th>Nombre</th>
                            <th>Descripción</th>
                            <th class="text-center">Color</th>
                            <th class="text-center">Tipo</th>
                            <th class="text-center">Causas</th>
                            <th class="text-center">Estado</th>
                            <th class="text-end">Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="@(!item.Activo ? "table-secondary" : "")">
                                <td>
                                    <strong>@item.Nombre</strong>
                                </td>
                                <td class="text-muted">@(item.Descripcion ?? "-")</td>
                                <td class="text-center">
                                    @if (!string.IsNullOrEmpty(item.Color))
                                    {
                                        <span class="badge" style="background-color: @item.Color;">@item.Color</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (item.EsPlaneado)
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="bi bi-calendar-check me-1"></i>Planeado
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">
                                            <i class="bi bi-exclamation-circle me-1"></i>No Planeado
                                        </span>
                                    }
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-info">@item.CausasParo.Count</span>
                                </td>
                                <td class="text-center">
                                    @if (item.Activo)
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-check me-1"></i>Activo
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">
                                            <i class="fas fa-times me-1"></i>Inactivo
                                        </span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="EditCategoriaParo" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                        <i class="bi bi-pencil"></i> Editar
                                    </a>
                                    @if (item.Activo)
                                    {
                                        <form asp-action="DeactivateCategoriaParo" asp-route-id="@item.Id" method="post" class="d-inline deactivate-form">
                                            @Html.AntiForgeryToken()
                                            <button type="button" class="btn btn-sm btn-warning deactivate-categoria-btn">
                                                <i class="bi bi-toggle-off me-1"></i>Desactivar
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <form asp-action="ActivateCategoriaParo" asp-route-id="@item.Id" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-success">
                                                <i class="bi bi-toggle-on me-1"></i>Activar
                                            </button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/assets/js/jquery/jquery.min.js"></script>
    <script src="~/assets/js/vendor/tables/datatables/datatables.min.js"></script>
    <script src="~/assets/js/vendor/notifications/sweet_alert.min.js"></script>
    <script src="~/assets/demo/pages/extra_sweetalert.js"></script>

    <script>
        const swalInit = swal.mixin({
            buttonsStyling: false,
            customClass: {
                confirmButton: 'btn btn-success',
                cancelButton: 'btn btn-danger'
            }
        });

        const _componentDatatableBasic = function() {
            if (!$().DataTable) {
                console.warn('Warning - datatables.min.js is not loaded.');
                return;
            }

            $.extend( $.fn.dataTable.defaults, {
                autoWidth: false,
                columnDefs: [{
                    orderable: false,
                    targets: [ 6 ],
                    width: '280px'
                }],
                dom: '<"datatable-header"fl>t<"datatable-footer"ip>',
                language: {
                    search: '<span class="me-3">Filter:</span> <div class="form-control-feedback form-control-feedback-end flex-fill">_INPUT_<div class="form-control-feedback-icon"><i class="ph-magnifying-glass opacity-50"></i></div></div>',
                    searchPlaceholder: 'Type to filter...',
                    lengthMenu: '<span class="me-3">Show:</span> _MENU_',
                    paginate: { 'first': 'First', 'last': 'Last', 'next': document.dir == "rtl" ? '&larr;' : '&rarr;', 'previous': document.dir == "rtl" ? '&rarr;' : '&larr;' }
                }
            });
            $('.datatable-basic').DataTable();
        };

        document.addEventListener('DOMContentLoaded', function() {
            _componentDatatableBasic();

            const deactivateButtons = document.querySelectorAll('.deactivate-categoria-btn');
            deactivateButtons.forEach(function(button) {
                button.addEventListener('click', function() {
                    const form = this.closest('.deactivate-form');
                    swalInit.fire({
                        title: '¿Está seguro?',
                        text: "¿Desea desactivar esta categoría de paro?",
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonText: 'Sí, desactivar',
                        cancelButtonText: 'No, cancelar',
                        buttonsStyling: false,
                        customClass: {
                            confirmButton: 'btn btn-success',
                            cancelButton: 'btn btn-danger'
                        }
                    }).then(function(result) {
                        if(result.value) {
                            form.submit();
                        }
                        else if(result.dismiss === swal.DismissReason.cancel) {
                            swalInit.fire('Cancelado', 'La categoría no ha sido desactivada', 'info');
                        }
                    });
                });
            });

            @if (TempData["Success"] != null)
            {
                <text>
                swalInit.fire({
                    title: '¡Éxito!',
                    text: '@TempData["Success"]',
                    icon: 'success',
                    confirmButtonText: 'OK',
                    buttonsStyling: false,
                    customClass: {
                        confirmButton: 'btn btn-success'
                    }
                });
                </text>
            }

            @if (TempData["Error"] != null)
            {
                <text>
                swalInit.fire({
                    title: 'Error',
                    text: '@TempData["Error"]',
                    icon: 'error',
                    confirmButtonText: 'OK',
                    buttonsStyling: false,
                    customClass: {
                        confirmButton: 'btn btn-danger'
                    }
                });
                </text>
            }
        });
    </script>
}
