@model IEnumerable<WebApp.Models.Boton>

@{
    ViewData["Title"] = "Gestión de Botones";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-toggle-on"></i> Gestión de Botones</h2>
        <a asp-action="CreateBoton" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Nuevo Botón
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover datatable-basic" id="tablaBotones">
                    <thead class="table-light">
                        <tr>
                            <th>Código</th>
                            <th>Nombre</th>
                            <th>Departamento</th>
                            <th>Última Activación</th>
                            <th>Estado</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><strong>@item.Codigo</strong></td>
                                <td>@item.Nombre</td>
                                <td>
                                    <span class="badge bg-info">@item.DepartamentoOperador.Nombre</span>
                                </td>
                                <td>
                                    @if (item.FechaUltimaActivacion.HasValue)
                                    {
                                        <small>@item.FechaUltimaActivacion.Value.ToString("dd/MM/yyyy HH:mm")</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Nunca</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Activo)
                                    {
                                        <span class="badge bg-success">Activo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactivo</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="EditBoton" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        @if (item.Activo)
                                        {
                                            <button type="button" class="btn btn-sm btn-danger" onclick="deactivateBoton(@item.Id)" title="Desactivar">
                                                <i class="bi bi-toggle-off"></i>
                                            </button>
                                        }
                                        else
                                        {
                                            <button type="button" class="btn btn-sm btn-success" onclick="activateBoton(@item.Id)" title="Activar">
                                                <i class="bi bi-toggle-on"></i>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Formularios ocultos para activar/desactivar -->
@foreach (var item in Model)
{
    <form id="deactivateForm-@item.Id" asp-action="DeactivateBoton" asp-route-id="@item.Id" method="post" style="display:none;">
        @Html.AntiForgeryToken()
    </form>
    <form id="activateForm-@item.Id" asp-action="ActivateBoton" asp-route-id="@item.Id" method="post" style="display:none;">
        @Html.AntiForgeryToken()
    </form>
}

@section Scripts {
    <script src="~/assets/js/vendor/tables/datatables/datatables.min.js"></script>
    <script src="~/assets/js/vendor/notifications/sweet_alert.min.js"></script>

    <script>
        $(document).ready(function () {
            $('.datatable-basic').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.11.5/i18n/es-ES.json'
                },
                order: [[0, 'asc']],
                dom: '<"datatable-header"fl><"datatable-scroll"t><"datatable-footer"ip>',
                autoWidth: false,
                columnDefs: [
                    {
                        orderable: false,
                        targets: [5]
                    }
                ]
            });
        });

        function deactivateBoton(id) {
            swal({
                title: '¿Desactivar botón?',
                text: "El botón no estará disponible para uso",
                type: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Sí, desactivar',
                cancelButtonText: 'Cancelar',
                confirmButtonClass: 'btn btn-danger',
                cancelButtonClass: 'btn btn-secondary',
                buttonsStyling: false
            }).then(function (result) {
                if (result.value) {
                    document.getElementById('deactivateForm-' + id).submit();
                }
            });
        }

        function activateBoton(id) {
            swal({
                title: '¿Activar botón?',
                text: "El botón estará disponible para uso",
                type: 'question',
                showCancelButton: true,
                confirmButtonText: 'Sí, activar',
                cancelButtonText: 'Cancelar',
                confirmButtonClass: 'btn btn-success',
                cancelButtonClass: 'btn btn-secondary',
                buttonsStyling: false
            }).then(function (result) {
                if (result.value) {
                    document.getElementById('activateForm-' + id).submit();
                }
            });
        }
    </script>
}
