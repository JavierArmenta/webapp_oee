@model IEnumerable<WebApp.Models.DepartamentoOperador>

@{
    ViewData["Title"] = "Lista de Departamentos con IDs";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Lista de Departamentos de Operador</h1>
        <div>
            <a asp-action="Index" class="btn btn-secondary me-2">
                <i class="bi bi-list"></i> Vista Completa
            </a>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Nuevo Departamento
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Nombre del Departamento</th>
                            <th>Descripción</th>
                            <th>IDs de Operadores</th>
                            <th>Total Operadores</th>
                            <th>Estado</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><code class="fs-6">@item.Id</code></td>
                                <td><strong>@item.Nombre</strong></td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Descripcion))
                                    {
                                        <span>@item.Descripcion</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">Sin descripción</span>
                                    }
                                </td>
                                <td>
                                    @if (item.OperadorDepartamentos.Any())
                                    {
                                        <span class="text-muted">
                                            [@string.Join(", ", item.OperadorDepartamentos.Select(od => od.OperadorId))]
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">Sin operadores</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge bg-info">@item.OperadorDepartamentos.Count()</span>
                                </td>
                                <td>
                                    @if (item.Activo)
                                    {
                                        <span class="badge bg-success">Activo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactivo</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                @if (!Model.Any())
                {
                    <div class="text-center text-muted py-5">
                        <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                        <p class="mt-3">No hay departamentos registrados.</p>
                        <a asp-action="Create" class="btn btn-primary">Crear el primer departamento</a>
                    </div>
                }
            </div>

            @if (Model.Any())
            {
                <div class="mt-3 p-3 bg-light rounded">
                    <h5>Resumen</h5>
                    <div class="row">
                        <div class="col-md-3">
                            <strong>Total de Departamentos:</strong> @Model.Count()
                        </div>
                        <div class="col-md-3">
                            <strong>Departamentos Activos:</strong> @Model.Count(d => d.Activo)
                        </div>
                        <div class="col-md-3">
                            <strong>Departamentos Inactivos:</strong> @Model.Count(d => !d.Activo)
                        </div>
                        <div class="col-md-3">
                            <strong>Total Asignaciones:</strong> @Model.Sum(d => d.OperadorDepartamentos.Count())
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
