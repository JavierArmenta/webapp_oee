@using WebApp.Models
@model IEnumerable<ApplicationUser>

<!-- Content area -->
<div class="content">

    <!-- Mini table -->
    <div class="card">
        <div class="card-header">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="showInactiveToggle"
                       @(ViewBag.ShowInactive ? "checked" : "")
                       onchange="toggleInactiveUsers(this.checked)">
                <label class="form-check-label" for="showInactiveToggle">
                    Mostrar usuarios desactivados
                </label>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-xs">
                <thead>
                    <tr>
                        <th>Usuario</th>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Correo</th>
                        <th>Autenticación</th>
                        <th>Estado</th>
                        <th>Actualizar</th>
                        <th>Activar/Desactivar</th>
                        <th>Roles</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (ApplicationUser user in Model)
                    {
                        <tr class="@(!user.IsActive ? "table-secondary" : "")">
                            <td>@user.UserName</td>
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>@user.Email</td>
                            <td>
                                @if (user.IsLdapUser)
                                {
                                    <span class="badge bg-info">
                                        <i class="fas fa-building me-1"></i>Active Directory
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">
                                        <i class="fas fa-user me-1"></i>Local
                                    </span>
                                }
                            </td>
                            <td>
                                @if (user.IsActive)
                                {
                                    <span class="badge bg-success">
                                        <i class="fas fa-check me-1"></i>Activo
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">
                                        <i class="fas fa-times me-1"></i>Inactivo
                                    </span>
                                }
                            </td>
                            <td>
                                @if (user.IsLdapUser)
                                {
                                    <button class="btn btn-primary btn-sm" disabled title="Los usuarios de AD no se pueden editar">
                                        Actualizar
                                    </button>
                                }
                                else
                                {
                                    <a class="btn btn-primary btn-sm" asp-action="Update" asp-route-id="@user.Id">
                                        Actualizar
                                    </a>
                                }
                            </td>
                            <td>
                                @if (user.IsActive)
                                {
                                    <form asp-action="Deactivate" asp-route-id="@user.Id" method="post">
                                        <button type="submit" class="btn btn-warning btn-sm" 
                                                onclick="return confirm('¿Está seguro de desactivar este usuario?');">
                                            <i class="fas fa-user-slash me-1"></i>Desactivar
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <form asp-action="Activate" asp-route-id="@user.Id" method="post">
                                        <button type="submit" class="btn btn-success btn-sm">
                                            <i class="fas fa-user-check me-1"></i>Activar
                                        </button>
                                    </form>
                                }
                            </td>
                            <td>
                                <a class="btn btn-primary btn-sm" asp-controller="Admin" asp-action="Manage" asp-route-userId="@user.Id">Editar Roles</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!-- /mini table -->

</div>
<!-- /content area -->

@section Scripts
{
    <script>
        function toggleInactiveUsers(showInactive) {
            window.location.href = '@Url.Action("Index", "Admin")?showInactive=' + showInactive;
        }
    </script>
}
