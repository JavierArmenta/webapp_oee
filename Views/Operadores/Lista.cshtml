@model IEnumerable<WebApp.Models.Operador>

@{
    ViewData["Title"] = "Lista de Operadores con IDs";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Lista de Operadores</h1>
        <div>
            <a asp-action="Index" class="btn btn-secondary me-2">
                <i class="bi bi-list"></i> Vista Completa
            </a>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Nuevo Operador
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>NÃºmero de Empleado</th>
                            <th>Nombre Completo</th>
                            <th>IDs de Departamentos</th>
                            <th>Estado</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><code class="fs-6">@item.Id</code></td>
                                <td><strong>@item.NumeroEmpleado</strong></td>
                                <td>@item.NombreCompleto</td>
                                <td>
                                    @if (item.OperadorDepartamentos.Any())
                                    {
                                        <span class="text-muted">
                                            [@string.Join(", ", item.OperadorDepartamentos.Select(od => od.DepartamentoOperadorId))]
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">Sin departamentos</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Activo)
                                    {
                                        <span class="badge bg-success">Activo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactivo</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                @if (!Model.Any())
                {
                    <div class="text-center text-muted py-5">
                        <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                        <p class="mt-3">No hay operadores registrados.</p>
                        <a asp-action="Create" class="btn btn-primary">Crear el primer operador</a>
                    </div>
                }
            </div>

            @if (Model.Any())
            {
                <div class="mt-3 p-3 bg-light rounded">
                    <h5>Resumen</h5>
                    <div class="row">
                        <div class="col-md-4">
                            <strong>Total de Operadores:</strong> @Model.Count()
                        </div>
                        <div class="col-md-4">
                            <strong>Activos:</strong> @Model.Count(o => o.Activo)
                        </div>
                        <div class="col-md-4">
                            <strong>Inactivos:</strong> @Model.Count(o => !o.Activo)
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
